<h1>User Years</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>April salary</th>
      <th>May salary</th>
      <th>June salary</th>
      <th>Nearest min salary</th>
      <th>Estimate age base date</th>
      <th>Age</th>
      <th>Average salary</th>
      <th>Min instalment</th>
      <th>Sum salary 10percent</th>
      <th>Max instalment</th>
      <th>Target year</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user_years.each do |user_year| %>
      <tr>
        <td><%= user_year.april_salary %></td>
        <td><%= user_year.may_salary %></td>
        <td><%= user_year.june_salary %></td>
        <td><%= user_year.nearest_min_salary %></td>
        <td><%= user_year.estimate_age_base_date %></td>
        <td><%= user_year.age %></td>
        <td><%= user_year.average_salary %></td>
        <td><%= user_year.min_instalment %></td>
        <td><%= user_year.sum_salary_10percent %></td>
        <td><%= user_year.max_instalment %></td>
        <td><%= user_year.target_year %></td>
        <td><%= link_to 'Show', user_year %></td>
        <td><%= link_to 'Edit', edit_user_year_path(user_year) %></td>
        <td><%= link_to 'Destroy', user_year, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

